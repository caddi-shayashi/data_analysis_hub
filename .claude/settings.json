{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/python/format.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/advanced/auto-deps.sh"
          }
        ]
      },
      {
        "matcher": "NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/python/notebook-format.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__bigquery__execute_sql",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/bigquery/cost-check.sh"
          }
        ]
      }
    ]
  }
}